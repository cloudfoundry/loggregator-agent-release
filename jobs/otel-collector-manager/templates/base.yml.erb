receivers:
  prometheus:
    config:
      scrape_configs:
        - job_name: 'otel-collector'
          scrape_interval: 5s
          scheme: https
          static_configs:
            - targets: ['127.0.0.1:14726']
          tls_config:
            cert_file: /var/vcap/jobs/otel-collector-manager/config/certs/scrape.crt
            key_file: /var/vcap/jobs/otel-collector-manager/config/certs/scrape.key
            ca_file: /var/vcap/jobs/otel-collector-manager/config/certs/scrape_ca.crt
            server_name: metrics_agent

exporters: {}

service:
  pipelines:
    metrics:
      receivers: [prometheus]
      exporters: []
