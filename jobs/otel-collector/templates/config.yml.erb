receivers:
  otlp:
    protocols:
      grpc:
        endpoint: 0.0.0.0:<%= p('grpc_port') %>

exporters: <%= YAML.dump(p('metrics_exporters')).sub("---", "").gsub("\n", "\n  ") %>

service:
  telemetry:
    logs:
      level: "debug"
  pipelines:
    metrics:
      receivers:
      - otlp
      exporters: <%= YAML.dump(p('metrics_exporters').keys).sub("---", "").gsub("\n", "\n      ") %>
